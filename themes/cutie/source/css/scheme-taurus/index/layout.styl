.index-container
  margin: 0 auto
  margin-top: 11em
  +for_breakpoint(mobile)
    margin-top: 6em
  text-align: center
  margin-bottom: 5em

.index-cards
  margin: 0 auto
  margin-top: 3em
  max-width: 960px
  +for_breakpoint(tablet)
    width: 90vw
    justify-content: center
    padding: 0
  +for_breakpoint(mobile)
    width: 85vw
    justify-content: flex-start
    padding: 0
  display: flex
  align-items: center
  justify-content: space-between
  flex-direction: row
  flex-wrap: wrap
  padding: 0 2.5em